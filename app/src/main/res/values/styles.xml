<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ActionBarOverflowMenu</item>
    </style>

    <style name="ActionBarOverflowMenu" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TraceableParticleButtonStyle" parent="AppTheme">
        <item name="android:checked">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textOff">@string/untracedParticle</item>
        <item name="android:textOn">@string/tracedParticle</item>
        <item name="android:textSize">@dimen/traceableParticlesTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/traceable_particle_button_on</item>
        <item name="android:paddingTop">@dimen/verticalPadding</item>
        <item name="android:paddingBottom">@dimen/verticalPadding</item>
    </style>

    <style name="GridLayoutElementStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">@dimen/verticalPadding</item>
        <item name="android:paddingBottom">@dimen/verticalPadding</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="TextViewStyle" parent="GridLayoutElementStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="SliderStyle" parent="GridLayoutElementStyle">
        <item name="isb_show_indicator">circular_bubble</item>
        <item name="isb_indicator_text_color">@color/white</item>
        <item name="isb_indicator_color">@color/colorAccent</item>
        <item name="isb_thumb_color">@color/white</item>
        <item name="isb_track_background_color">@color/colorAccentLight</item>
        <item name="isb_track_background_size">4dp</item>
        <item name="isb_track_progress_color">@color/colorAccent</item>
        <item name="isb_track_progress_size">10dp</item>
    </style>

    <style name="SwitchStyle" parent="GridLayoutElementStyle">
        <item name="android:checked">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:showText">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ControlButtonStyle" parent="GridLayoutElementStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>