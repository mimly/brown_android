<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="@dimen/strokeWidth" android:color="@color/darkGreen" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/lime" />
            <stroke android:width="@dimen/strokeWidth" android:color="@color/darkGreen" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimary" />
            <stroke android:width="@dimen/strokeWidth" android:color="@color/darkGreen" />
        </shape>
    </item>
</selector>